@model DBSmartAPIManager.DAL.Entities.Project

@{
    ViewData["Title"] = "Delete Project";
    Layout = "_Layout";
}

<div id="delete-project-modal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Delete Project</h2>
        <h3>Are you sure you want to delete this project?</h3>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="ProjectId" />
            <p><strong>Project Name:</strong> @Model.Name</p>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Date:</strong> @Model.UploadDate.ToString("yyyy-MM-dd")</p>
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.2/codemirror.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.2/mode/javascript/javascript.min.js"></script>
}
